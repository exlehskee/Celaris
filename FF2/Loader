    def = false,
    callback = function(value)
        Magnets = value
    end
})

-- Show Hitbox Toggle
section1:toggle({
    name = "Show Hitbox",
    def = false,
    callback = function(value)
        ShowHitbox = value
        -- Update existing spheres' transparency based on toggle
        for _, v in workspace:GetChildren() do
            if v.Name == "Football" and v:IsA("BasePart") then
                local sphere = v:FindFirstChild("RangeSphere")
                if sphere then
                    sphere.Transparency = ShowHitbox and 0.7 or 1
                end
            end
        end
    end
})

-- Magnet Range Slider
section1:slider({
    name = "Magnet Range",
    def = 10,
    max = 20,
    min = 1,
    rounding = true,
    ticking = false,
    measuring = "",
    callback = function(value)
        Range = value
        -- Update sphere size
        for _, v in workspace:GetChildren() do
            if v.Name == "Football" and v:IsA("BasePart") then
                local sphere = v:FindFirstChild("RangeSphere")
                if sphere then
                    sphere.Size = Vector3.new(Range, Range, Range)
                end
            end
        end
    end
})

